#*****************************#
#***** application binds *****#
#*****************************#

# terminal
super + Return
    st

# floating terminal
super + shift + Return
    st -c floatst

# tabbed terminal
super + ctrl + Return
    tabbed -d -c st -w

# launcher
super + p
    dmn_run

# power menu
super + Escape
    dmn_power

# clipboard manager
super + c
    dmn_clip

# network manager
super + n
    networkmanager_dmenu

# gui filemanager
super + shift + p
    pcmanfm

# browser
super + shift + w
    $BROWSER

# spotify
super + shift + s
    spoti

# terminal filemanager
super + shift + f
    st -e lf

# screenshot and selection capture
{_,super + }@Print
    dmn_scr

# brightness up/down
XF86MonBrightness{Up,Down}
    xbacklight {-inc,-dec} 10%

# volume up/down/mute
XF86Audio{RaiseVolume,LowerVolume,Mute}
    pulsemixer --{change-volume +5 --unmute,change-volume -5 --unmute,toggle-mute}

# media play/stop/next/previous
XF86Audio{Play,Stop,Next,Prev}
    playerctl {play-pause,stop,next,previous}

# reload sxhkd
super + shift + x
    pkill -USR1 -x sxhkd


#*****************************#
#********* wm binds **********#
#*****************************#

# quit yaxwm
super + shift + q
    yaxwm -c wm exit

# reload yaxwmrc
super + shift + r
    yaxwm -c wm reload

# restart yaxwm
super + ctrl + shift + r
    yaxwm -c wm restart

# focus next or previous window
super + {j,k}
    yaxwm -c win focus {next,prev}

# close window, swap tiled window in/out of master, cycle tiled windows in place
super + {q,space,Tab}
    yaxwm -c win {kill,swap,cycle}

# toggle fullscreen and fake fullscreen (enable manipulating fullscreen window)
{_,super + }F11
    yaxwm -c win {full,fakefull}

# toggle floating or sticky
super + ctrl + {space,s}
    yaxwm -c win {float,stick}

# move window, signed (+/-) for relative changes
super + shift + {h,j,k,l}
    yaxwm -c win resize {x=-10,y=+10,y=-10,x=+10}

# resize window, signed (+/-) for relative changes
super + ctrl + {h,j,k,l}
    yaxwm -c win resize {w=-10,h=+10,h=-10,w=+10}

# view, send, or follow to a workspace (by number)
super + {_,shift + ,ctrl + }{1-9,0}
    yaxwm -c ws {view,send,follow} {1-9,10}

# view, send, or follow to the next, previous, last active,
# next non-empty, or prev non-empty workspace
super + {_,shift + ,ctrl + }{bracketleft,bracketright,BackSpace,Left,Right}
    yaxwm -c ws {view,send,follow} {prev,next,last,prevne,nextne}

# view, send, or follow to the next, previous, or last active monitor
super + {_,shift + ,ctrl + }{comma,period,backslash}
    yaxwm -c mon {view,send,follow} {prev,next,last}

# change active workspace layout
super + {t,m,g,s,d,f}
    yaxwm -c set layout {tile,mono,grid,spiral,dwindle,none}

# change number of windows in master or first stack
super + {_,shift + }{i,d}
    yaxwm -c set {master,stack} {+1,-1}

# change gap width
super + {plus,minus}
    yaxwm -c set gap width {+5,-5}

# change border width (total)
super + ctrl + {plus,minus}
    yaxwm -c set border width {+1,-1}

# change outer border width (double border)
super + ctrl + shift + {plus,minus}
    yaxwm -c set border outer_width {+1,-1}
