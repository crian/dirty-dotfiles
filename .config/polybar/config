[bar/bspwmbar]
monitor = ${env:MONITOR:}
width = 100%
height = 22
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

overline-size = 2

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

inherit = fonts

modules-left = bspwm xwindow
modules-center =
modules-right = network battery xbacklight volume date time

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = false


[bar/yaxwmbar]
monitor = ${env:MONITOR:}
width = 100%
height = 22
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

overline-size = 2

padding-left = 0
padding-right = 0

